    def _TemperatureGraph(self):
        self.RaspberryPiID = self._RaspberryPiID()
        StartEndDateTime = self._DateTime()
        SQL = "SELECT TimeStamp,Temperature FROM " + str(functools.reduce(operator.add, self.database)) + "." + str(
            functools.reduce(operator.add, self.SensorDataTable)) + " WHERE " + str(
            StartEndDateTime[0]) + " <= TimeStamp <= " + str(StartEndDateTime[1]) + " AND RaspberryPiID = %s"
        con = mysql.connector.connect(host=self.host, user=self.UserName, password=self.Password)
        cursor = con.cursor()
        insert = [(functools.reduce(operator.add, self.RaspberryPiID))]
        cursor.execute(SQL, insert)
        data = cursor.fetchall()
        cursor.close()
        con.close()
        Time = []
        Temperature = []
        for i in data:
            Time.append(datetime.fromtimestamp(i[0]))
            Temperature.append(i[1])
        plt.plot(Time, Temperature)
        plt.xlabel = "Date Time"
        plt.ylabel = "Temperature / Degrees Celsius"
        plt.title = "Temperature against time"
        plt.show()

    def _AccelerationGraph(self):
        self.RaspberryPiID = self._RaspberryPiID()
        insert = [(functools.reduce(operator.add, self.RaspberryPiID))]
        StartEndDateTime = self._DateTime()
        SQL = "SELECT TimeStamp,Acceleration FROM " + str(functools.reduce(operator.add, self.database)) + "." + str(
            functools.reduce(operator.add, self.SensorDataTable)) + " WHERE " + str(
            StartEndDateTime[0]) + " <= TimeStamp <= " + str(StartEndDateTime[1]) + " AND RaspberryPiID = %s"
        con = mysql.connector.connect(host=self.host, user=self.UserName, password=self.Password)
        cursor = con.cursor()
        cursor.execute(SQL, insert)
        data = cursor.fetchall()
        cursor.close()
        con.close()
        Time = []
        Acceleration = []
        for i in data:
            Time.append(datetime.fromtimestamp(i[0]))
            Acceleration.append(i[1])
        plt.plot(Time, Acceleration)
        plt.xlabel = "Date Time"
        plt.ylabel = "Acceleration / Metres per second squared"
        plt.title = "Acceleration against time"
        plt.show()

    def _AccelerationX(self):
        self.RaspberryPiID = self._RaspberryPiID()
        insert = [(functools.reduce(operator.add, self.RaspberryPiID))]
        StartEndDateTime = self._DateTime()
        SQL = "SELECT TimeStamp,Acceleration_X FROM " + str(functools.reduce(operator.add, self.database)) + "." + str(
            functools.reduce(operator.add, self.SensorDataTable)) + " WHERE " + str(
            StartEndDateTime[0]) + " <= TimeStamp <= " + str(StartEndDateTime[1]) + " AND RaspberryPiID = %s"
        con = mysql.connector.connect(host=self.host, user=self.UserName, password=self.Password)
        cursor = con.cursor()
        cursor.execute(SQL, insert)
        data = cursor.fetchall()
        cursor.close()
        con.close()
        Time = []
        Acceleration_X = []
        for i in data:
            Time.append(datetime.fromtimestamp(i[0]))
            Acceleration_X.append(i[1])
        plt.plot(Time, Acceleration_X)
        plt.xlabel = "Date Time"
        plt.ylabel = "Acceleration / Metres per second squared"
        plt.title = "Acceleration X against time"
        plt.show()

